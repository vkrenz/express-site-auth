<html lang="en">
<head>
    <title>Express Node Form Validation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <a class="navbar-brand m-auto" href="#">Register</a>
    </nav>
    <div class="container mt-4 w-50 text-muted">
        <div class="col-md-12">

            {{#if email}}
                <p>Hello, {{email}}</p>
            {{/if}}

            {{#if err}}
                {{#each err}}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error:</strong> {{this.msg}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div> 
                {{/each}}
            {{/if}}
          
            <form method="POST" action="/user/auth" onsubmit="console.log(`Email: ${req.body.email}`)">
                {{!-- <div class="form-group my-2">
                    <label>Username</label>
                    <input type="text" class="form-control" name="usernamename" />                         
                    <div class="invalid-feedback">
                      Please choose a username.
                    </div>
                </div> --}}
                <div class="form-group my-2">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" />
                </div>
                <div class="form-group my-2">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" />
                </div>
                {{!-- <div class="form-group my-2">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" name="confirm_password" />
                </div> --}}
                {{!-- <div class="input-group my-5">
                  <label class="input-group-text" for="inputGroupFile">Upload</label>
                  <input type="file" class="form-control" id="inputGroupFile">
                </div> --}}
                <div class="form-group" align="center">
                    <button type="submit" class="btn btn-primary btn-block">Create</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>