    <div class="container-fluid d-flex justify-content-center align-items-center" id="gradient-background">
        <form method="post" action="/user/auth/register" class="form-register shadow-lg">
            {{#if err}}
                {{#each err}}
                    <div class="alert alert-warning mt-3" role="alert">
                        {{this.msg}}
                    </div>
                {{/each}}
            {{/if}}
            {{#if Err}}
                <div class="alert alert-warning mt-3" role="alert">
                    {{{Err}}}
                </div>
            {{/if}}
            <div class="row">
                <div class="col-6" id="general-information">
                    <h4 class="text-muted font-weight-light my-4">General Information</h4>
                    <div class="row">
                        <div class="col">
                            <div class="form-group my-2">
                                <label for="username" class="required">Username</label>
                                <input type="text" class="form-control" name="username" {{#if username}}value="{{username}}"{{/if}}{{#if passedUsername}}value="{{passedUsername}}"{{/if}} placeholder="jdoe" required />                         
                                <div class="invalid-feedback">
                                    Please choose a username.
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group my-2">
                                <label for="fullName" class="required">Full Name</label>
                                <input type="text" class="form-control" name="fullName" {{#if fullName}}value="{{fullName}}"{{/if}} placeholder="John Doe" required />                         
                                <div class="invalid-feedback">
                                    Please enter your full name.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group my-2">
                        <label for="email" class="required">Email</label>
                        <input type="email" class="form-control" name="email" {{#if email}}value="{{email}}"{{/if}} placeholder="John.Doe2022@gmail.com" required />
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group my-2">
                                <label for="password" class="required">Password</label>
                                <input type="password" class="form-control" name="password" {{#if password}}value="{{password}}"{{/if}} placeholder="************" required />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group my-2">
                                <label for="confirm_password" class="required">Confirm Password</label>
                                <input type="password" class="form-control" name="confirm_password" {{#if confirm_password}}value="{{confirm_password}}"{{/if}} placeholder="************" required />
                            </div>
                        </div>
                        <p class="text-muted my-4">(<span class=required></span> = required)</p>
                    </div>
                </div>
                <div class="col-6" id="contact-details">
                    <h4 class="text-muted font-weight-light my-4">Contact Details</h4>
                    <div class="row">
                        <div class="form-group my-2">
                            <label for="phoneNumber">Phone Number</label>
                            <input type="text" class="form-control"name="phoneNumber" {{#if phoneNumber}}value="{{phoneNumber}}"{{/if}} placeholder="+1 (647)111-2222" />
                        </div>
                        <div class="form-group my-2">
                            <label for="companyName" class="required">Company Name</label>
                            <input type="text" name="companyName" id="companyName" class="form-control" {{#if companyName}}value="{{companyName}}"{{/if}} placeholder="Seneca College of Applied Arts and Technology" required />
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group my-2">
                                    <label for="country">Country</label>
                                    <input type="text" name="country" id="country" class="form-control" {{#if country}}value="{{country}}"{{/if}} placeholder="Canada" />
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="form-group my-2">
                                    <label for="city">City</label>
                                    <input type="text" name="city" id="city" class="form-control" {{#if city}}value="{{city}}"{{/if}} placeholder="Toronto" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group my-2">
                            <label for="postalCode">Postal Code</label>
                            <input type="text" name="postalCode" id="postalCode" class="form-control" {{#if postalCode}}value="{{postalCode}}"{{/if}} placeholder="M2J 2X5" />
                        </div>
                        <div class="form-group my-2">
                            {{!-- <label class="input-group-text" for="inputGroupFile">Upload</label>
                            <input type="file" class="form-control" id="inputGroupFile"> --}}
                            <label for="pfpURL">Upload Profile Picture (URL)</label>
                            <input type="text" name="pfpURL" id="pfpURL" class="form-control">
                        </div>
                        <button type="submit" class="btn-hover gradient my-4 shadow-lg" align="center">Register</button>
                        <p class="text-muted text-left float-left">Already have an account? <a href="/user/login" style="text-decoration:none" class="link-login">Log in</a></p>
                    </div>
                </div>
            </div>
        </form>
    </div>

