<html lang="en">
<head>
    <title>Express Node Form Validation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<style>
.required:after {
    content:" *";
    color: red;
}
</style>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <a class="navbar-brand m-auto" href="#">Register</a>
    </nav>
    <div class="container mt-4 w-50 text-muted">
        <div class="col-md-12">

            {{#if email}}
                <p>Hello, {{email}}</p>
            {{/if}}

            {{#if err}}
                {{#each err}}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error:</strong> {{this.msg}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div> 
                {{/each}}
            {{/if}}
          
            <form method="post" action="/user/auth/register" onsubmit="console.log(`Email: ${req.body.email}`)">
                <p class="text-muted">(<span class=required></span> = required)</p>
                <div class="row">
                    <div class="col-4">
                        <label for="username" class="required">Username</label>
                        <input type="text" class="form-control" name="username" required />                         
                        <div class="invalid-feedback">
                        Please choose a username.
                        </div>
                    </div>
                    <div class="col-8">
                        <label for="fullName" class="required">Full Name</label>
                        <input type="text" class="form-control" name="fullName" required />                         
                        <div class="invalid-feedback">
                        Please enter your full name.
                        </div>
                    </div>
                </div>
                <div class="form-group my-2">
                    <label for="email" class="required">Email</label>
                    <input type="email" class="form-control" name="email" required />
                </div>
                <div class="form-group my-2">
                    <div class="row">
                        <div class="col-6">
                            <label for="password" class="required">Password</label>
                            <input type="password" class="form-control" name="password" required />
                        </div>
                        <div class="col-6">
                            <label for="confirm_password" class="required">Confirm Password</label>
                            <input type="password" class="form-control" name="confirm_password"required />
                        </div>
                    </div>
                </div>
                <div class="form-group my-2">
                    <div class="row">
                        <div class="col-6">
                            <label for="phoneNumber">Phone Number</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-6">
                            <label for="companyName" class="required">Company Name</label>
                            <input type="text" name="companyName" id="companyName" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="form-group my-2">
                    <div class="row">
                        <div class="col-4">
                            <label for="country">Country</label>
                            <input type="text" name="country" id="country" class="form-control">
                        </div>
                        <div class="col-4">
                            <label for="city">City</label>
                            <input type="text" name="city" id="city" class="form-control">
                        </div>
                        <div class="col-4">
                            <label for="postalCode">Postal Code</label>
                            <input type="text" name="postalCode" id="postalCode" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group my-5">
                  {{!-- <label class="input-group-text" for="inputGroupFile">Upload</label>
                  <input type="file" class="form-control" id="inputGroupFile"> --}}
                  <label for="pfpURL">Upload Profile Picture (URL)</label>
                  <input type="text" name="pfpURL" id="pfpURL" class="form-control">
                </div>
                <div class="form-group" align="center">
                    <p class="text-muted">Already have an account? <a href="/user/login" class="text-primary">Sign In</a></p>
                </div>
                <div class="form-group" align="center">
                    <button type="submit" class="btn btn-primary btn-block">Create</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>