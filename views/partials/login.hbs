    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/gradient-button.css">
    <link rel="stylesheet" href="/css/gradient-background.css">
</head>
<body>
{{!-- Navbar Start --}}
<nav class="navbar fixed-top navbar-expand-lg bg-light shadow-lg" id="navbar">
    <div class="container">
        <a class="navbar-brand" href="#">
            <img src="/img/snap-logo.png" alt="Snap! Logo" height="70px" width="auto">
            <em><strong>Snap!</strong></em> Web Hosting
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto" id="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/blog">Blog</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/articles/read_more">Articles</a>
            </li>
                <li class="nav-item">
                <a class="nav-link" href="/user/register">Register</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-primary btn-md mx-2 login-btn active" href="/user/login">Login</a>
            </li>
        </ul>
        </div>
    </div>
</nav>
{{!-- Navbar End --}}

    <div class="container-fluid d-flex justify-content-center align-items-center flex-column" id="gradient-background">
        <form action="/user/auth/login" method="post" class="form-signin shadow-lg">
            {{#if err}}
                {{#each err}}
                    <div class="alert alert-warning mt-3" id="err" role="alert">
                        {{this.msg}}
                    </div>
                {{/each}}
            {{/if}}
            {{#if Err}}
                <div class="alert alert-warning mt-3" id="Err" role="alert">
                    {{{Err}}}
                </div>
            {{/if}}
            <h2 class="text-center text-muted m-5">LOGIN</h2>
            <div class="mb-3">
                <label for="username" class="form-label text-muted">Username</label>
                <input type="text" class="form-control" name="username" {{#if passedUsername}}value="{{passedUsername}}"{{/if}} placeholder="jdoe">
                <div class="invalid-feedback">
                    Please enter your username.
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label text-muted">Password</label>
                <input type="password" class="form-control" name="password" placeholder="************">
                <div class="invalid-feedback">
                    Please enter your password.
                </div>
            </div>
            {{!-- TODO: Implement 'remember-me' --}}
            <div class="mb-3 form-check mb-4">
                <label class="form-check-label" for="remember-me">Remember Me</label>
                <input type="checkbox" class="form-check-input" name="remember-me" value="remember-me">
            </div>
            <button type="submit" class="btn-hover gradient my-5 shadow-lg" align="center">Sign In</button>
            <div class="mb-3 form-check">
                <p class="text-muted" align="center">Don't have an account? <a href="/user/register" style="text-decoration:none" class="link-register">Sign Up</a></p>
            </div>
        </form>
    </div>

{{!-- Footer Start --}}
<ul class="nav d-flex justify-content-center align-items-center flex-column shadow-lg">
    <h5 class="text-dark font-weight-light mt-4">âœ¨ <strong>{{count}}</strong> Users are happily registered âœ¨</h5>
    <div class="nav-links d-flex my-5">
        <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/blog">Blog</a>
